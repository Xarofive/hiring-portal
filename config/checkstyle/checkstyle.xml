<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Лимит длины строки -->
    <module name="LineLength">
        <property name="max" value="160"/>
    </module>

    <!-- ❌ запрещаем пустую строку перед закрывающей } -->
    <module name="RegexpMultiline">
        <property name="format" value="\n\s*\n\s*}"/>
        <property name="message" value="No blank line before closing brace."/>
        <property name="maximum" value="0"/>
        <property name="fileExtensions" value="java"/>
    </module>

    <!-- ❌ запрещаем две и более пустых строк подряд -->
    <module name="RegexpMultiline">
        <property name="format" value="\n\s*\n\s*\n"/>
        <property name="message" value="No multiple consecutive empty lines."/>
        <property name="maximum" value="0"/>
        <property name="fileExtensions" value="java"/>
    </module>

    <module name="TreeWalker">
        <!-- ✅ требуем пустую строку между методами/конструкторами/внутр. классами -->
        <module name="EmptyLineSeparator">
            <property name="allowNoEmptyLineBetweenFields" value="true"/>
            <property name="allowMultipleEmptyLinesInsideClassMembers" value="false"/>
        </module>

        <module name="WhitespaceAfter"/>
        <module name="FinalLocalVariable"/>
        <module name="EmptyBlock"/>
        <module name="NeedBraces"/>
        <module name="EqualsHashCode"/>
        <module name="AvoidInlineConditionals"/>
        <module name="MethodParamPad"/>
        <module name="NoWhitespaceBefore"/>
        <module name="NoWhitespaceAfter"/>
        <module name="VariableDeclarationUsageDistance"/>
        <module name="ModifierOrder"/>
        <module name="RedundantModifier"/>
        <module name="OuterTypeFilename"/>
        <module name="MethodLength">
            <property name="max" value="50"/>
        </module>
    </module>
</module>